<p id="notice"><%= notice %></p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Birthday:</strong>
  <%= @user.birthday %>
</p>

<p>
  <strong>Address:</strong>
  <%= @user.address %>
</p>

<p>
  <strong>Postal code:</strong>
  <%= @user.postal_code %>
</p>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Create new post', post_create_path(@user.id) %>

<table>
  <thead>
    <tr>
      <th>Msg</th>
      <th>Last Updated at</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.msg %></td>
        <td><%= post.updated_at %></td>
        <td><%= link_to 'Edit', post_edit_url(@user.id,post.id) %></td>
        <td><%= link_to 'Destroy', post_delete_url(@user.id,post.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>